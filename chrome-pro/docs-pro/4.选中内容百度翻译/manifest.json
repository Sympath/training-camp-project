{
    "manifest_version": 2,
    "name": "baidu Translate",
    "version": "1.0",
    "description": "Translate what you select with baidu",
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "icons": {
        "16": "images/icon16.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "permissions": [
        "contextMenus"
    ]
}